{
  // Extend existing configuration
  // from ESlint and eslint-plugin-react defaults.
 "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },

  "plugins": [
  ],
  "rules": {
    // Disable `no-console` rule
    "no-console": 0,
    // Give a warning if identifiers contain underscores
    "no-underscore-dangle": 1,
    // Default to single quotes and raise an error if something
    // else is used
    "quotes": [2, "single"],

    // Possible errors
    "no-constant-condition": 1,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 1,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-irregular-whitespace": 2,
    "no-obj-calls": 2,
    "no-unexpected-multiline": 2,
    "no-unreachable": 1,

    // Best practices
    "curly": 1,
    "no-empty-function": 1,
    "no-implicit-globals": 1,
    "no-multi-spaces": 2,
    "yoda": 2,

    // Variables
    "no-undef": 2,
    "no-undefined": 2,
    "no-unused-vars": 1

    // Stylistic


  }
}
